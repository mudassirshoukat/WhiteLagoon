
@model WhiteLagoon.Domain.Entities.Villa
<div class="w-100 card border-0 p-4">
   <div class="card-header bg-success bg-gradient ml-0  py-3">
      <div class="row">
         <div class="col-12 text-center">
            <h2 class="text-white py-2">Delete Villa</h2>
         </div>
      </div>

   </div>
   <div class="card-body border p-4 ">
      <form method="post" class="row">
         <input  asp-for="Id" hidden />
         <div class="p-3">
            <div class="form-floating py-1 col-12 ">
               <input type="text" disabled asp-for="Name" class="form-control border shadow " />
               <label class="ms-2" asp-for="Name"></label>
               

            </div>

            <div class="form-floating py-1 col-12 ">
               <input type="text" disabled asp-for="Description" class="form-control border shadow " />
               <label class="ms-2" asp-for="Description"></label>
               
            </div>

            <div class="form-floating py-1 col-12 ">
               <input type="text" disabled asp-for="Price" class="form-control border shadow " />
               <label class="ms-2" asp-for="Price"></label>
            </div>

            <div class="form-floating py-1 col-12 ">
               <input type="text" disabled asp-for="SqFt" class="form-control border shadow " />
               <label class="ms-2" asp-for="SqFt"></label>
            </div>

            <div class="form-floating py-1 col-12 ">
               <input type="text" disabled asp-for="Occupancy" class="form-control border shadow " />
               <label class="ms-2" asp-for="Occupancy"></label>
            </div>

            <div class="form-floating  py-1 col-12 ">
               <input type="text" disabled asp-for="ImageUrl" class="form-control border shadow " />
               <label class="ms-2" asp-for="ImageUrl"></label>
            </div>
            <div class="row pt-2">
               <div class="col-6 col-md-3 ">
                  <button type="submit" class="btn btn-danger w-100">
                     <i class="bi bi-trash-fill me-1"></i>Delete
                  </button>
               </div>

               <div class="col-6 col-md-3 ">
                  <a asp-controller="villa" asp-action="index" class="btn btn-secondary w-100">
                     <i class="bi bi-x-circle me-1"></i>Cancel
                  </a>
               </div>
            </div>

         </div>
      </form>
   </div>

</div>



